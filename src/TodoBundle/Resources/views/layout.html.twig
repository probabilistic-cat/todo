{% extends "::base.html.twig" %}

{% block title %}Todo{% endblock %}

{% block icon %}
    <link rel="icon" type="image/x-icon" href="{{ asset("favicon.ico") }}" />
{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset("css/base.css") }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset("css/header.css") }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset("css/footer.css") }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset("js/jquery-3.2.1.min.js") }}"></script>
{% endblock %}

{% block body %}
    <div class="header headfoot">
        <p class="logo"><a href="{{ path("todo_homepage") }}">Todo 0.1.0</a></p>
        {#{% if app.session.get("user/signed") == 1 %}
            <p class="user_actions">
                <a href="#">%username%</a>
            </p>#}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p class="user_actions">
                <a href="{{ path("todo_logout") }}">Log out</a>
            </p>
            <p class="user_actions">
                <a href="#">{{ app.user.username }}</a>
            </p>
        {% else %}
            <p class="user_actions">
                <a href="{{ path("todo_signup") }}">Sign up</a>
            </p>
            <p class="user_actions">
                <a href="{{ path("todo_login") }}">Log in</a>
            </p>
        {% endif %}

    </div>

    <div class="content">
        {% block content %}{% endblock %}
    </div>

    <div class="footer headfoot">
        <p>footer</p>
    </div>
{% endblock %}

